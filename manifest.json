{
  "name": "Pin Github",
  "description": "Pin subfields for your PR & Issues",
  "version": "1.0",
  "manifest_version": 2,
  "browser_action": {
    "default_popup": "src/index.html"
  },
  "content_scripts": [
    {
      "matches": ["https://github.com/*/issues"],
      "js": ["dist/contentScript.bundle.js"]
    }
  ],
  "background": {
    "scripts": ["dist/backgroundScript.bundle.js"],
    "persistent": false
  },
  "permissions": [
    "storage",
    "webNavigation",
    "tabs",
    "https://github.com/*/issues"
  ]
}
